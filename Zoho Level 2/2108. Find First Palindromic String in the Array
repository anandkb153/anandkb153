class Solution {
    public String firstPalindrome(String[] words)
     {
        
        for(String input :words)
        {
          if(isPalindrome(input))
            return input;
        }

        return "";

    }
    public static boolean isPalindrome(String s)
     {
        int start = 0, end = s.length() - 1;
        while (start < end) 
        {
            if (s.charAt(start) != s.charAt(end)) {
                return false;
            }
            start++;
            end--;
        }
        return true;
     }
     

    }

